<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ArticleLabel">
    <resultMap id="ArticleLabelMap" type="ArticleLabel">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId"/>
        <result column="label_id" property="labelId"/>
        <result column="label_name" property="labelName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        
    </resultMap>

    <sql id="tb">
        `sky_article_label`
    </sql>

    <sql id="cols_all">
        `id`, <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `article_id`, `label_id`, `label_name`, `created_at`, `updated_at` 
    </sql>

    <sql id="vals">
         #{articleId}, #{labelId}, #{labelName}, now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="id != null">AND `id` = #{id}</if>
            <if test="articleId != null">AND `article_id` = #{articleId}</if>
            <if test="labelId != null">AND `label_id` = #{labelId}</if>
            <if test="labelName != null">AND `label_name` = #{labelName}</if>
            <if test="createdAt != null">AND `created_at` = #{createdAt}</if>
            <if test="updatedAt != null">AND `updated_at` = #{updatedAt}</if>
            
        </where>
    </sql>

    <sql id="update_criteria">
        <set>
            <if test="articleId != null">`article_id` = #{articleId},</if>
            <if test="labelId != null">`label_id` = #{labelId},</if>
            <if test="labelName != null">`label_name` = #{labelName},</if>
            
            updated_at = now()
        </set>
    </sql>


    <select id="findById" parameterType="long" resultMap="ArticleLabelMap">
        SELECT
            <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE `id` = #{id} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="ArticleLabelMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <insert id="create" parameterType="ArticleLabel" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <update id="update" parameterType="ArticleLabel">
        UPDATE
        <include refid="tb"/>
        <include refid="update_criteria"/>
        WHERE `id` = #{id}
    </update>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="ArticleLabelMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC LIMIT #{offset}, #{limit}
    </select>

    <delete id="delete" parameterType="long">
        delete from <include refid="tb"/>
        where `id` = #{id}
    </delete>

    <select id="findByArticleId" parameterType="long" resultMap="ArticleLabelMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE `article_id` = #{articleId}
    </select>

    <select id="findByArticleIdAndLabelId" parameterType="map" resultMap="ArticleLabelMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE `article_id` = #{articleId} AND `label_id` = #{labelId}
    </select>
</mapper>